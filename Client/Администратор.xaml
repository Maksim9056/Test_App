<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.Администратор"
             Title="Администратор" >
    <VerticalStackLayout>


        <StackLayout Padding="8">
            <Label x:Name="header" Text="Выберит Тест" FontSize="18"
                       SizeChanged="header_SizeChanged"
                       />
            <Picker x:Name="languagePicker" Title = "Тесты"
                SelectedIndexChanged="PickerSelectedIndexChanged">
                <Picker.Items>

                </Picker.Items>
            </Picker>

            <Button
                    x:Name="CounterLog1"
                    Text="Создать вопросы"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Clicked="CounterLog1_Clicked"
                    VerticalOptions="Start"
                    HorizontalOptions="CenterAndExpand"
                    FontSize="16" HeightRequest="10"
                    WidthRequest="320"
                    Margin="10"
                    Padding="10"
                   />

        </StackLayout>
    </VerticalStackLayout>
</ContentPage>