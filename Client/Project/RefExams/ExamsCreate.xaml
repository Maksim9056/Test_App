<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Client.Project.ExamsCreate"   
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"     
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"   
        Title="Создать экзамен">

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" Margin="10">
                <!--<Label Text="Код пользователя (Id):" /> 
                <Entry Text="{Binding Id}" />-->

                <Label Text="Имя/Экзамена:" />
                <Entry Text="{Binding Name_exam}" />

            </StackLayout>

            <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="Center" Margin="10">
                <Button Text="Сохранить" Clicked="SaveButton_Click" />
                <Button Text="Отмена" Clicked="CancelButton_Click" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
