                Icon="dotnet_bot.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:Main.Admin}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Пользователь"
                Route="User"
                Icon="dotnet_bot.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views1:Users}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Помощь"
