<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            VerticalOptions="Fill">


            <Entry x:Name="nameEntry9" FontSize="22"
              TextChanged="nameEntry9_TextChanged"
              Placeholder ="Введите электроную почту"
              Keyboard="Email"
              Margin="20"
             />

            <Entry x:Name="nameEntry1" FontSize="22"
             Placeholder ="Введите пароль"
             Margin="20"
             TextChanged="nameEntry1_TextChanged"
             Keyboard ="Text"
             />


            <Button
                x:Name="CounterLog"
                Text="Войти"
                 SemanticProperties.Hint="Counts the number of times you click"
                 Clicked="CounterLog_Clicked" 
                 VerticalOptions="Start"
                HorizontalOptions="CenterAndExpand"
                FontSize="16" HeightRequest="10"
                WidthRequest="150"
                Margin="10"
                Padding="10"
             />

            <Button
                x:Name="CounterBtn"
                Text="Регистрация"
         
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="CounterBtn_Clicked_1"
                VerticalOptions="End" HorizontalOptions="CenterAndExpand"
                FontSize="16" HeightRequest="10"
                WidthRequest="150"
                  Margin="10"
                Padding="10"
             />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
